<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PFE_0220" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="MainTextStyle">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:padding">@dimen/text_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>


    </style>


    <style name="MediumTextStyle">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:padding">@dimen/medim_text_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>


    </style>

</resources>