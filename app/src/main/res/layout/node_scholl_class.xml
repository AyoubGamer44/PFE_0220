<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:background="@drawable/border"
android:paddingVertical="8dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/start_time"
            android:textAlignment="center"
            android:textStyle="bold"
          android:textSize="@dimen/text_big"
            android:text="08 : 30" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/end_time"
            android:textAlignment="center"
            android:textStyle="bold"
          android:textSize="@dimen/text_big"
            android:text="10 : 30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
android:paddingHorizontal="5dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/module_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
       android:textSize="@dimen/text_big"
            android:textStyle="bold"
            android:text="Module name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speciality_name"
            android:text="Spaciality" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departement_name"
            android:text="Departement" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/level_name"
           android:textStyle="bold"
           android:textAlignment="center"
            android:text="Master 01" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:id="@+id/section_name"
            android:textAlignment="center"
            android:text="Section 01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/group_name"
            android:textAlignment="center"
            android:drawableEnd="@drawable/ic_student_small"
            android:text="G : 01 (24)" />


    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:id="@+id/school_class_type_name"
     android:padding="@dimen/medim_text"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:background="@drawable/school_class_type_circle"
        android:layout_height="wrap_content"
        android:text="TP" />

</LinearLayout>